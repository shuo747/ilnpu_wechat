/**append.wxss**/
@import './login.wxss';
.container{
  height: auto;
}
.append-title {
  position: absolute;
  top: 30rpx;
  width: 100%;
  color: #777;
  font-size: 30rpx;
  line-height: 200%;
  text-align: center;
}
.confirm-btn{
  margin-top: 0;
}
.append-form {
  padding: 150rpx 0 30rpx;
}
.append-form .input-group {
  padding: 20rpx 8rpx;
  margin: 30rpx 3%;
}
.append-form .input-label {
  font-size: 28rpx;
  height: 20rpx;
  line-height: 20rpx;
  padding: 0 20rpx;
}
.append-form .input-group input,
.append-form .input-group picker {
  font-size: 28rpx;
  padding: 0 20rpx;
}

